[user]

    email = rob@robphoenix.com
    name = Rob Phoenix
    signingkey = 4E270D9DED1AB5E7

[alias]

    s = status -s
    c = commit -m
    # Commit all changes
    ca = !git add -A && git commit -av
    a = add -v
    aa = add --all
    p = push
    po = push origin
    pl = pull --rebase
    f = fetch
    fu = fetch upstream
    m = merge
    mom = merge origin/master
    mum = merge upstream/master
    mod = merge origin/dev
    h = reflog
    co = checkout
    cn = checkout -b
    cl = clone
    b = branch -a
    rp = remote prune
    tags = tag
    stashes = stash list
    stash-all = stash save --include-untracked
    unstage = reset -q HEAD --
    discard = checkout --
    uncommit = reset --mixed HEAD~
    recommit = commit --amend
    unmerged = diff --name-only --diff-filter=U
    unmerge = reset --merge
    rs = remote -v

    # rebase
    # Interactive rebase with the given number of latest commits
	ri = "!r() { git rebase -i HEAD~$1; }; r"
    rca = commit --amend '-S'
    rc = rebase --continue
    rom = rebase origin/master
    rum = rebase upstream/master
    rod = rebase origin/dev

    # delete remote branch
    dr = push origin --delete
    # delete local branch
    dl = branch -D
    # Remove branches that have already been merged with master
    # a.k.a. ‘delete merged’
	dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d; git remote -v update -p"

    # simple log
    l = log --oneline --decorate --pretty=format:"\\ %C(green)%<(25,trunc)%an\\ %C(cyan)%<(20,trunc)%ar\\ %C(yellow)%<(70,trunc)%s\\ %C(red)%h"
    # Color graph detailed log view
	gl = log --graph --color --decorate --stat --pretty=format:"%C(yellow)%H%C(green)%d%C(reset)%n%x20%cd%n%x20%cn%x20(%ce)%n%x20%s%n"

    # use diff-so-fancy https://github.com/so-fancy/diff-so-fancy
    d = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy  | less --tabs=4 -RFX; }; f"
    dsfl = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git show --color \"$@\" | diff-so-fancy  | less --tabs=4 -RFX; }; f"

    # hub
    pr = pull-request

    # golang codereview
    change = codereview change
    gofmt = codereview gofmt
    mail = codereview mail
    pending = codereview pending
    submit = codereview submit
    sync = codereview sync

[color]

    ui = true

[help]

    autocorrect = 1

[core]

    excludesfile = ~/.gitignore
    editor = nvim
    trustctime = false

[github]

    user = robphoenix

[commit]

    gpgsign = false
    verbose = true

[gpg]

    program = gpg2

[push]

    default = current
    followTags = true

[status]

    showUntrackedFiles = all

[http]

    cookiefile = /home/rob/.gitcookies
